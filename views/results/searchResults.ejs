<!DOCTYPE html>
<html>
<head>
  <title>Resultados de Búsqueda</title>
</head>
<body>
  <div class="container mt-5">
    <div class="mt-5">
      <h1>Resultados de la Búsqueda</h1>
      <ul class="list-group">
        <% results.forEach(result => { %>
          <li class="list-group-item">
            <h5><%= result.destination %> - <%= result.price %> USD</h5>
            <p>Fechas: <%= result.dates %></p>
            <p>Pasajeros: <%= result.passengers %></p>
            <a class="btn btn-info" href="/quoteDetails/<%= result.id %>">Ver Detalles</a>
          </li>
        <% }) %>
      </ul>
    </div>
  </div>
</body>
</html>
